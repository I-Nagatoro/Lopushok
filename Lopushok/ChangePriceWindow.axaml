<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Lopushok.ChangePriceWindow"
        Icon="/Assets/Lopushok.ico"
        Title="Изменение стоимости"
        Width="300" Height="150"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10" Spacing="10">
        <TextBlock Text="Введите новую цену:"/>
        <TextBox x:Name="PriceBox"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="5">
            <Button Content="Отмена" Click="Cancel_Click"/>
            <Button Content="Изменить" Click="Apply_Click"/>
        </StackPanel>
    </StackPanel>
</Window>